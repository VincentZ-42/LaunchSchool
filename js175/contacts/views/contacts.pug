extends layout

block content
  h2 All My Contacts
  table
    thead
      tr
        th Name
        th Phone Number
        //- th
    tbody
      each contact in contacts
        tr
          td #{contact.lastName}, #{contact.firstName}
          td= contact.phoneNumber
          //- td
          //-   button.delete(type='button')
          //-     img(src="images/delete.svg")
    tfoot
      tr
        td(colspan="3")
          a(href=`/contacts/new`) New Contact